{% extends 'base.html.twig' %}

{% block title %}Create CarAd{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center mb-4">Create CarAd</h1>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0">Car Information</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.brand) }}
                                {{ form_widget(form.brand, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.brand) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.price) }}
                                {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.price) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.gearbox) }}
                                {{ form_widget(form.gearbox, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.gearbox) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.energy) }}
                                {{ form_widget(form.energy, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.energy) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.fuel) }}
                                {{ form_widget(form.fuel, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.fuel) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.year) }}
                                {{ form_widget(form.year, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.year) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.picture) }}
                                {{ form_widget(form.picture, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.picture) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.description) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.mileage) }}
                                {{ form_widget(form.mileage, { 'attr': {'class': 'form-control'} }) }}
                                {{ form_errors(form.mileage) }}
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('car_ad_index') }}" class="btn btn-secondary">Back to list</a>
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
