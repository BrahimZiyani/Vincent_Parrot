{% extends 'base.html.twig' %}

{% block title %}CarAd index{% endblock %}

{% block body %}
    <h1>CarAd index</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car_ad in car_ads %}
            <tr>
                <td>{{ car_ad.carId }}</td>
                <td>{{ car_ad.brand }}</td>
                <td>{{ car_ad.price }}</td>
                <td>
                    <a href="{{ path('car_ad_show', {'car_id': car_ad.carId}) }}">show</a>
                    <a href="{{ path('car_ad_edit', {'car_id': car_ad.carId}) }}">edit</a>
                    <form method="post" action="{{ path('car_ad_delete', {'car_id': car_ad.carId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car_ad.carId) }}">
                        <button class="btn">delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('car_ad_new') }}">Create new</a>
{% endblock %}
