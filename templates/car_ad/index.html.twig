{% extends 'base.html.twig' %}

{% block title %}CarAd index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h1 class="text-center mb-4">CarAd index</h1>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0">Car Listings</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Brand</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for car_ad in car_ads %}
                                <tr>
                                    <td>{{ car_ad.carId }}</td>
                                    <td>{{ car_ad.brand }}</td>
                                    <td>{{ car_ad.price }}</td>
                                    <td>
                                        <a href="{{ path('car_ad_show', {'car_id': car_ad.carId}) }}" class="btn btn-info btn-sm">Show</a>
                                        <a href="{{ path('car_ad_edit', {'car_id': car_ad.carId}) }}" class="btn btn-primary btn-sm">Edit</a>
                                        <form method="post" action="{{ path('car_ad_delete', {'car_id': car_ad.carId}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ car_ad.carId) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('car_ad_new') }}" class="btn btn-success">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
