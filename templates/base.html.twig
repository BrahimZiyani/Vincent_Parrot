<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <a href="{{ path('app_home') }}" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li><a href="{{ path('app_home') }}" class="nav-link px-2 link-secondary">Home</a></li>
            <li><a href="" class="nav-link px-2 link-dark">Features</a></li>
            <li><a href="" class="nav-link px-2 link-dark">Pricing</a></li>
            <li><a href="" class="nav-link px-2 link-dark">FAQs</a></li>
            <li><a href="{{ path('app_about') }}" class="nav-link px-2 link-dark">About</a></li>
        </ul>

        <div class="col-md-3 text-end">
            {% if app.user %}
                <a href="{{ path('app_profile') }}" class="btn btn-outline-primary me-2">Profile</a>
                <a href="{{ path('app_logout') }}" class="btn btn-primary">Logout</a>
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('user_index') }}" class="btn btn-secondary">Users</a>
                {% endif %}
                {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('car_ad_index') }}" class="btn btn-secondary">Car Sales</a>
                {% endif %}
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-outline-primary me-2">Login</a>
                <a href="{{ path('app_signup') }}" class="btn btn-primary">Sign-up</a>
            {% endif %}
        </div>
        </header>
        </div>   

        <div class="container">
        {% block body %}{% endblock %}
        </div>
        
        <div class="container">
        <footer class="py-3 my-4">
            <ul class="nav justify-content-center border-bottom pb-3 mb-3">
            <li class="nav-item"><a href="{{ path('app_home') }}" class="nav-link px-2 text-muted">Home</a></li>
            <li class="nav-item"><a href="{{ path('app_features') }}" class="nav-link px-2 text-muted">Features</a></li>
            <li class="nav-item"><a href="{{ path('app_pricing') }}" class="nav-link px-2 text-muted">Pricing</a></li>
            <li class="nav-item"><a href="{{ path('app_faqs') }}" class="nav-link px-2 text-muted">FAQs</a></li>
            <li class="nav-item"><a href="{{ path('app_about') }}" class="nav-link px-2 text-muted">About</a></li>
            </ul>
            <p class="text-center text-muted">© 2024 Vincent Parrot Garage</p>
        </footer>
        </div>
    </body>
</html>
