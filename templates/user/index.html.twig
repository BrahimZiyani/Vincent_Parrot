{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <h1 class="text-center mb-4">User List</h1>

                <div class="card">
                    <div class="card-header">
                        <h2 class="card-title mb-0">User Management</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Roles</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.roles|join(', ') }}</td>
                                    <td>
                                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm">Edit</a>
                                        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('user_new') }}" class="btn btn-success">Create new</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
