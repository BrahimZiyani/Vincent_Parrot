{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="text-center mb-4">Cr√©er un nouvel utilisateur</h1>
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="form-group row mb-3">
                                {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.email) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                {{ form_label(form.plainPassword.first, 'Password', { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                {{ form_label(form.plainPassword.second, 'Repeat Password', { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                {{ form_label(form.roles, null, { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    <div class="form-check">
                                        {{ form_widget(form.roles.0, { 'attr': {'class': 'form-check-input me-2'} }) }}
                                        {{ form_label(form.roles.0, null, { 'label_attr': {'class': 'form-check-label'} }) }}
                                    </div>
                                    <div class="form-check">
                                        {{ form_widget(form.roles.1, { 'attr': {'class': 'form-check-input me-2'} }) }}
                                        {{ form_label(form.roles.1, null, { 'label_attr': {'class': 'form-check-label'} }) }}
                                    </div>
                                    <div class="form-check">
                                        {{ form_widget(form.roles.2, { 'attr': {'class': 'form-check-input me-2'} }) }}
                                        {{ form_label(form.roles.2, null, { 'label_attr': {'class': 'form-check-label'} }) }}
                                    </div>
                                    {{ form_errors(form.roles) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                {{ form_label(form.name, null, { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="form-group row mb-3">
                                {{ form_label(form.phoneNumber, null, { 'label_attr': {'class': 'col-sm-3 col-form-label'} }) }}
                                <div class="col-sm-9">
                                    {{ form_widget(form.phoneNumber, { 'attr': {'class': 'form-control'} }) }}
                                    {{ form_errors(form.phoneNumber) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
